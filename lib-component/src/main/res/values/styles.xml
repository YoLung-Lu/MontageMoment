<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- common Activity theme with system tool bar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- common Activity theme without system tool bar -->
    <style name="AppTheme.CustomToolbar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Shadow/Invisible Activity theme -->
    <style name="AppTheme.Invisible" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Activity with translucent black background painted by the window -->
    <style name="AppTheme.TranslucentBlackBg" parent="AppTheme.CustomToolbar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!-- API 21 -->
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
    </style>
</resources>
