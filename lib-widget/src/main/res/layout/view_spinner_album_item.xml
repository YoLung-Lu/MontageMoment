<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".PhotoPickerActivity">

    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="@dimen/spinner_height"
        android:layout_height="@dimen/spinner_height"
        android:layout_margin="4dp"
        android:scaleType="centerCrop"
        app:srcCompat="@color/colorAccent"/>

    <TextView
        android:id="@+id/album_photo_num"
        android:layout_width="80dp"
        android:layout_height="@dimen/spinner_height"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="(999)"/>

    <TextView
        android:id="@+id/album_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_height"
        android:layout_toRightOf="@id/album_cover"
        android:layout_toLeftOf="@id/album_photo_num"
        android:gravity="left|center_vertical"
        android:paddingLeft="16dp"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="test x test x test x test x test x test x test x test x test"/>
</RelativeLayout>
