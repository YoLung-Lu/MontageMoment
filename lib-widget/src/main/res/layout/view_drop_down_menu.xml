<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The background -->
    <ImageView
        android:id="@+id/menu_overlay_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:clickable="true"
        app:srcCompat="@color/bg_translucent_black"
        tools:alpha="1"/>

    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <!-- The menu items -->
        <android.support.v7.widget.GridLayout
            android:id="@+id/menu_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:columnCount="3"
            app:orientation="horizontal"
            app:rowCount="2"
            tools:background="@android:color/white">

            <com.my.widget.SquaredMenuItemView
                android:id="@+id/menu_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_border_rect"
                app:caption="@string/menu_settings"
                app:iconSrcCompat="@drawable/icon_settings"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <com.my.widget.SquaredMenuItemView
                android:id="@+id/menu_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_border_rect"
                app:caption="@string/menu_settings"
                app:iconSrcCompat="@drawable/icon_settings"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <com.my.widget.SquaredMenuItemView
                android:id="@+id/menu_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_border_rect"
                app:caption="@string/menu_settings"
                app:iconSrcCompat="@drawable/icon_settings"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <com.my.widget.SquaredMenuItemView
                android:id="@+id/menu_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_border_rect"
                app:caption="@string/menu_settings"
                app:iconSrcCompat="@drawable/icon_settings"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <com.my.widget.SquaredMenuItemView
                android:id="@+id/menu_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_border_rect"
                app:caption="@string/menu_settings"
                app:iconSrcCompat="@drawable/icon_settings"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <com.my.widget.SquaredMenuItemView
                android:id="@+id/menu_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_border_rect"
                app:caption="@string/menu_settings"
                app:iconSrcCompat="@drawable/icon_settings"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>
        </android.support.v7.widget.GridLayout>

        <!-- The down arrow -->
        <FrameLayout
            android:id="@+id/down_arrow_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <ImageView
                android:id="@+id/down_arrow_start"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:tint="@android:color/darker_gray"
                app:srcCompat="@drawable/icon_arrow_down"/>

            <ImageView
                android:id="@+id/down_arrow_end"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:alpha="0"
                app:srcCompat="@drawable/icon_arrow_down"/>
        </FrameLayout>
    </LinearLayout>
</merge>
